---
import AccessoriesSection from "../components/Home/AccessoriesSection.astro";
import HomeHeroSection from "../components/Home/HomeHeroSection.astro";
import Model3Section from "../components/Home/Model3Section.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tesla">
  <div
    id="home-page-box"
    class="h-screen snap-y bg-[#780808db] snap-mandatory overflow-y-scroll after:z-[99999] after:content-['geg'] after:absolute after:bottom-0 after:w-full  after:bg-blue-800 after:border-b-[10px] after:border-[red]"
  >
    <HomeHeroSection />
		<Model3Section />
		<AccessoriesSection />
  </div>
</Layout>

<script>
  ([...document.querySelectorAll(".h-screen")] as HTMLElement[]).forEach(
    (el) => {
      el.style.height = `${window.innerHeight-1}px`;
    }
  );
</script>
