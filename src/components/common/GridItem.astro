---
interface Props {
  classes?: string;
  titlePrimary: string;
  titleSecondary?: string;
  message: string;
  delay?: number;
}

const { classes = "", message, titlePrimary, titleSecondary, delay } = Astro.props;
---

<section class={`${delay ? `animate-delay-[${delay}s]`: ""} ${classes}`}>
  <h3 class="mb-[5px]">
    {titlePrimary}
    {titleSecondary && <span class="text-[20px]">{titleSecondary}</span>}
  </h3>
  <p class="text-sm">{message}</p>
</section>
