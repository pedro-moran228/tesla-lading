---
import LayoutHeader from "../LayoutHeader.astro";
import GridItem from "../common/GridItem.astro";
import { isDevEnv } from "../../helpers/isDevEnv";
---

<main class="h-screen relative">
  <LayoutHeader color="black" />

  <div class="absolute w-full h-full z-10 bg-red-900">
    <picture>
      <source
        srcset={isDevEnv("models/") + "Model-S-Main-Hero-Mobile-LHD.avif"}
        media="(max-width: 639px)"
      />
      <source
        srcset={isDevEnv("models/") + "Model-S-Main-Hero-Desktop-LHD.avif"}
        media="(min-width: 640px)"
      />
      <source
        srcset={isDevEnv("models/") + "Model-S-Main-Hero-Mobile-LHD.avif"}
        media="(min-width: 640px) and (orientation:portrait)"
      />
      <img
        class="h-full w-full object-top xs:object-[0px_35%] sm:object-center object-cover"
        src={isDevEnv("models/") + "Model-S-Main-Hero-Desktop-LHD.avif"}
        srcset={isDevEnv("models/") + "Model-S-Main-Hero-Desktop-LHD.avif"}
        alt="Home outfitted with Tesla Solar Roof"
      />
    </picture>
  </div>

  <section
    class="absolute z-20 h-full w-full pb-[50px] sm:pb-[80px] flex flex-col justify-between text-center"
  >
    <header class="animate-delay-[.85s]">
      <h1 class="mt-[17.5vh] font-medium">Model S</h1>
      <p class="text-[17px] font-medium">Plain</p>
    </header>
    <footer
      class="container [&>section>h3>span]:text-[20px] [&>section>p]:text-sm w-[328px] sm:w-[760px] text-white grid grid-cols-3 sm:grid-cols-4 mx-auto place-content-center gap-[24px_6px]"
    >
      <!-- TODO: Refactor the rest -->
      <GridItem
        classes="animate-delay-[1s]"
        message="Range (EPA est.)"
        titlePrimary="396"
        titleSecondary="mi"
      />

      <section class="animate-delay-[1.15s]">
        <h3>1.99 <span>s</span></h3>
        <p>0-60 mph*</p>
      </section>

      <section class="animate-delay-[1.30s]">
        <h3>200 <span>mph</span></h3>
        <p>Top Speedâ€ </p>
      </section>

      <section class="hidden sm:block animate-delay-[1.45s]">
        <h3>1,020 <span>hp</span></h3>
        <p>Peak Power</p>
      </section>
      <section
        class="w-full animate-delay-[1.60s] space-y-[14px] sm:space-y-0 col-span-full place-self-end sm:flex-center sm:space-x-[20px]"
      >
        <a href="#" class="btn-light">Order Now</a>
        <a href="#" class="btn-light--outline">Demo Drive</a>
      </section>
    </footer>
  </section>
</main>