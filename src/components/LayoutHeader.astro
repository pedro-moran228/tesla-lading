---
import Logo from "./Logo.astro";

interface Props {
  color?: string;
}

const { color } = Astro.props;
---

<header id="leading-header" class="w-full flex items-center px-5 py-[12px] fixed z-50 text-transparent transition-colors duration-200 text-sm font-medium" style={{ color }}>

  <div class="flex-grow basis-0">
    <a class="block w-[7.5rem] ml-6" href="/">
      <Logo />
    </a>
  </div>

  <nav>
    <ul class="flex [&>li>a]:inline-block [&>li>a]:px-[16px] [&>li>a]:py-[6px] [&>li>a]:rounded">
      <li><a href="models">Model S</a></li>
      <li><a href="#">Model 3</a></li>
      <li><a href="#">Model X</a></li>
      <li><a href="#">Model Y</a></li>
      <li><a href="#">Solar Roof</a></li>
      <li><a href="#">Solar Panels</a></li>
      <li><a href="#">Powerwall</a></li>
    </ul>
  </nav>

  <nav class="flex justify-end flex-grow basis-0">
    <ul class="flex [&>li>a]:inline-block [&>li>a]:px-[16px] [&>li>a]:py-[6px] [&>li>a]:rounded">
      <li><a href="#">Shop</a></li>
      <li><a href="#">Account</a></li>
      <li><a href="#">Menu</a></li>
    </ul>
  </nav>


</header>